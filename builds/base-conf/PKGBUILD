# Maintainer: Carles Rafols i Belles

pkgname=base-conf
pkgver=1
pkgrel=1
pkgdesc="Configure arch linux system"
arch=(any)
license=(GPL)
depends=(
  aur-meta
  build-meta
  doas-conf
  env-vars
  neovim-meta
  networkmanager-meta
  paccache-hooks
  pipewire
  system_config-conf
  ungoogled-chromium-conf
  utils-meta
  xorg-meta
)

package() {
  # List of locales to be generated
  install -Dm0644 "$srcdir"/locale.gen "$pkgdir"/etc/locale.gen

  # Set default locale
  install -Dm0644 "$srcdir"/locale.conf "$pkgdir"/etc/locale.conf
}
sha256sum=(SKIP)
