# Maintainer: Carles Rafols i Belles

pkgname=xorg-meta
pkgver=1
pkgrel=1
pkgdesc="Install Xorg related packages"
arch=(any)
license=(GPL)
source=(sys.startxrc)
depends=(
  bspwm
  picom
  xorg-server
  xorg-xev
  xorg-xinit
  xorg-xsetroot
)

package() {
  install -Dm0644 \
    "$srcdir"/sys.startxrc \
    "$pkgdir"/usr/lib/sys.startxrc
}
sha256sums=('ed8ac86eec57e55855b0c83961ed9a197ab8d24e897f6f6107ddd6217e861a14')
