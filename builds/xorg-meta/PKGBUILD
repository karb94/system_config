# Maintainer: Carles Rafols i Belles

pkgname=xorg-meta
pkgver=1
pkgrel=1
pkgdesc="Install Xorg related packages"
arch=(any)
license=(GPL)
source=(xinitrc)
depends=(
  bspwm
  hsetroot
  picom
  sxhkd
  unclutter
  xorg-server
  xorg-xev
  xorg-xinit
  xorg-xsetroot
)

package() {
  install -Dm0644 \
    "$srcdir"/xinitrc \
    "$pkgdir"/usr/lib/xorg-meta/xinitrc
}
sha256sums=('fbd14558a200d024757d9bbeef7890f0ab6476af4b463216467aa266149876dc')
