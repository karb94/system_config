# Maintainer: Carles Rafols i Belles

pkgname=xorg-meta
pkgver=1
pkgrel=1
pkgdesc="Install Xorg related packages"
arch=(any)
license=(GPL)
source=(startup.sh)
depends=(
  bspwm
  picom
  xorg-server
  xorg-xev
  xorg-xinit
  xorg-xsetroot
)

package() {
  install -Dm0644 \
    "$srcdir"/sys.startxrc \
    "$pkgdir"/usr/lib/sys.startxrc
}
