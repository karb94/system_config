# Maintainer: Carles Rafols i Belles

pkgname=pacman_conf-aur
pkgver=1
pkgrel=1
pkgdesc="Install pacman configuration (pacman.conf) for Arch User Repository"
arch=(any)
license=(GPL)
source=(aur.conf)
install=pacman_conf.install
depends=(aurutils)

package() {
  install -Dm0644 aur.conf \
    "$pkgdir"/etc/pacman.d/aur.conf
}
sha256sums=('332435269ed83926445d9b8fb9183cac020be951bb30057a680062ce16c0f2f9')
